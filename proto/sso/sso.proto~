syntax = "proto3";

package auth;

option go_package = "brashka.sso.v2;ssov2";

// Auth is service for managing permissions and roles.
service Auth {
  rpc Register (RegisterRequest) returns (RegisterResponse);
  rpc Login (LoginRequest) returns (LoginResponse);
  rpc refreshToken (refreshTokenRequest) returns (LoginResponse);
  rpc Logout (LogoutRequest) returns (LogoutResponse);
  rpc addPermission (addPermissionRequest) returns (addPermissionResponse);
  rpc removePermission (removePermissionRequest) returns (removePermissionResponse);
  rpc grantPermission (grantPermissionRequest) returns (LoginResponse);
  rpc revokePermission (revokePermissionRequest) returns (LoginResponse);

}

message RegisterRequest {
  string email = 1;
  string password = 2;
}

message RegisterResponse {
  string user_uuid = 1;
  string err = 2;
}

message LoginRequest {
  string email = 1;
  string password = 2;
  string app_uuid = 3;
}
message LoginResponse {
  string access_token = 1;
  string refresh_token  = 2;
  string err = 3;
}
message refreshTokenRequest {
  string token = 1;
}

message LogoutRequest {
  string email = 1;
  string app_uuid = 2;
}

message LogoutResponse {
  bool success = 1;
  string err = 2;
}

message addPermissionRequest {
  string name = 1;
  string app_uuid = 2;
}

message addPermissionResponse {
  bool success = 1;
  string err = 2;
}

message removePermissionRequest {
  string permission_uuid = 1;
  string app_uuid = 2;
  string err = 3;
}

message removePermissionResponse {
  bool success = 1;
  string err = 2;
}

message grantPermissionRequest {
  string permission_name = 1;
  string email = 2;
  string app_uuid = 3;
}

message revokePermissionRequest {
  string permission_name = 1;
  string email = 2;
  string app_uuid = 3;
}